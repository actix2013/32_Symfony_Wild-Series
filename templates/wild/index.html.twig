{% extends 'base.html.twig' %}

{% block title %}All programs{% endblock %}

{% block body %}

    <div class="container pl-5 mb-lg-5 ">
        <div class="col-11 m-5 p-5 border border-danger rounded myBlockTextBase">
            {% form_theme form 'bootstrap_4_layout.html.twig' %}
            {{ form_start(form) }}
            {{ form_row(form.searchField) }}
            <button type="submit" name="btnSearch">Rechercher</button>
            {{ form_end(form) }}
        </div>
        <h1 class="ml-xl-5 mt-5 mb-lg-5">{{ pageTitle }} </h1>

        <ul class="list-unstyled">
            {% for program in programs %}
                <li class="mb-5">
                    <div class="myBlockTextBaseBgWhite p-3">
                        <h2>{{ loop.index }} / {{ program.title }} - Catégorie : {{ program.category.name }}</h2>
                        <p>{{ program.summary }}</p>
                        <a class="h4 text-decoration-none text-white"
                           href="{{ path('wild_program', { 'programName':program
                               .title|replace
                                   ({" ": "-"}) }) }}">
                            Cliquer ici pour afficher les saisons de ce programme
                        </a>
                        <hr>
                    </div>
                </li>
            {% else %}
                <li class="mb-5 ml-5">
                    <div>
                        <h2> Aucune série trouvée.</h2>
                    </div>
                </li>
            {% endfor %}
        </ul>
        <a class="h4 text-black-50" href="{{ path('app_index') }}">
            Retour à l'accueil
        </a>
    </div>
{% endblock %}
