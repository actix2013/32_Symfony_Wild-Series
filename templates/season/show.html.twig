{% extends 'base.html.twig' %}

{% block title %}Season{% endblock %}

{% block body %}
    <h1>Season</h1>
    <div class="{{ containerFormTitle }}">
        <h1 class="col-6 p-2 mr-1 text-white">Show Season : </h1>
        <div class="col-3 mt-1">
            <a class="{{ btnDelete }}" href="{{ path('season_edit', {'id': season.id}) }}">edit</a>
        </div>
        <div class="col-3 mt-1">
            {{ include('season/_delete_form.html.twig') }}
        </div>


    </div>

    <table class="table {{ containerTable }} bg-secondary">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ season.id }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ season.number }}</td>
            </tr>
            <tr>
                <th>Year</th>
                <td>{{ season.year }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ season.description }}</td>
            </tr>
        </tbody>
    </table>

    <div class="{{ containerEnd }}">
        <a class="{{ btnDelete }}" href="{{ path('season_index') }}">back to list</a>
    </div>



{% endblock %}
